@model Project1.WebApp.Models.OrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Place Order</h1>

<h4>Add Items to Your Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @foreach (var kvp in Model.Location.Stock) {
                    <label asp-for="Products[kvp.Key]" class="control-label"></label>
                    <input type="number" asp-for="Products[kvp.Key]" class="form-control" />
                    <span asp-validation-for="Products[kvp.Key]" class="text-danger"></span>
                }

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
