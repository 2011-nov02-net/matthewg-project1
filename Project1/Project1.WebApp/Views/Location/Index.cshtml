@model IEnumerable<Project1.WebApp.Models.LocationViewModel>

@{
    ViewData["Title"] = "Locations";
}

<h1>Locations List</h1>

@if (TempData.ContainsKey("IsAdmin")) {
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @if (TempData.ContainsKey("IsAdmin")) {
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @:| @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @:| @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    } else {
                        @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Place Order", "Create", "Order", new { id = item.Id }, new { @class = "btn btn-primary" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
